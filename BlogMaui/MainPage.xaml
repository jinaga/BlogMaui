<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BlogMaui.MainPage">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Label Grid.Row="0" Text="{Binding Message}" FontSize="Large" />
        <RefreshView Grid.Row="1" Command="{Binding Refresh}" IsRefreshing="{Binding Loading}">
            <ScrollView>
                <ListView ItemsSource="{Binding Posts}">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <ViewCell>
                                <Label Text="{Binding Title}" FontSize="Medium" />
                            </ViewCell>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </ScrollView>
        </RefreshView>
        <HorizontalStackLayout Grid.Row="2">
            <Button Text="Refresh" Command="{Binding Refresh}" />
            <Button Text="Login" Command="{Binding Login}" />
        </HorizontalStackLayout>
    </Grid>

</ContentPage>
