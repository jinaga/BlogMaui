<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BlogMaui.MainPage">

    <VerticalStackLayout Margin="10">
        <Label Text="{Binding Message}" FontSize="Large" />
        <ActivityIndicator IsRunning="{Binding Loading}" IsVisible="{Binding Loading}" />
        <RefreshView Command="{Binding Refresh}" IsRefreshing="{Binding Refreshing}">
            <ScrollView>
                <ListView ItemsSource="{Binding Posts}">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <ViewCell>
                                <Label Text="{Binding Title}" FontSize="Medium" />
                            </ViewCell>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </ScrollView>
        </RefreshView>
        <Button Text="Refresh" Command="{Binding Refresh}" />
    </VerticalStackLayout>

</ContentPage>
