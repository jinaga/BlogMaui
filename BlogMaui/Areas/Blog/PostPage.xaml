<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BlogMaui.Areas.Blog.PostPage"
             xmlns:fonts="clr-namespace:BlogMaui.Fonts"
             Title="Post">
    <Grid RowDefinitions="Auto,*" ColumnDefinitions="*">
        <Grid RowDefinitions="Auto" ColumnDefinitions="*,Auto">
            <Label Text="{Binding Title}"
                   FontSize="Large"
                   Margin="10,20,10,20"/>
            <ImageButton Grid.Column="1"
                         Source="{FontImageSource FontFamily=FluentSystemIcons, Glyph={x:Static fonts:FluentSystemIcons.IconIc_fluent_edit_12_regular}, Color=Black}"
                         HeightRequest="70"
                         Padding="5"
                         Command="{Binding EditCommand}" />
        </Grid>
    </Grid>
</ContentPage>