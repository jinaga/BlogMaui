<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="BlogMaui.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:BlogMaui"
    xmlns:authentication="clr-namespace:BlogMaui.Authentication"
    xmlns:visitor="clr-namespace:BlogMaui.Visitor"
    Shell.FlyoutBehavior="Disabled">

    <ShellContent
        Title="Gatekeeper"
        ContentTemplate="{DataTemplate authentication:GatekeeperPage}"
        Route="gatekeeper" />

    <TabBar IsVisible="{Binding NotLoggedIn}"
            Route="notloggedin">
        <Tab Title="Visitor"
             Route="visitor">
            <ShellContent
                Title="Visitor"
                ContentTemplate="{DataTemplate visitor:VisitorPage}" />
        </Tab>
    </TabBar>

    <TabBar IsVisible="{Binding LoggedIn}"
            Route="loggedin">
        <Tab Title="Home"
             Route="main">
            <ShellContent
                Title="Home"
                ContentTemplate="{DataTemplate local:MainPage}" />
        </Tab>
    </TabBar>
</Shell>
